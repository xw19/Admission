
<%= simple_form_for @qualification do |f| %>
  <div class="row">
    <%= f.input :name, wrapper_html: { class: 'medium-6 columns'} %>
    <%= f.input :year, wrapper_html: { class: 'medium-6 columns'} %>
  </div>
  <div class="row">
    <%= f.input :description, wrapper_html: { class: 'medium-12 columns'} %>
  </div>
  <div class="row">
    <%= f.input :issuing_authority, wrapper_html: { class: 'medium-6 columns'} %>
    <%= f.input :points, wrapper_html: { class: 'medium-6 columns'} %>
  </div>
  <div class="row">
      <%= f.input :certificate, as: :file, wrapper_html: { class: 'medium-12 columns' } %>
  </div>
  <%= f.button :submit %>
<% end %>
